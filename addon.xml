<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.mp3search"
       name="MP3 Search"
       version="0.2.3"
       provider-name="ghua@seznam.cz">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="script.module.simple.downloader" version="0.9.2"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             provides="audio"
             library="default.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <language></language>
    <summary lang="en">Search,play and download mp3's </summary>
    <description lang="en">With this addon you can search for mp3's, listen and download them.</description>
    <disclaimer></disclaimer>
    <platform>all</platform>
  </extension>
</addon>
